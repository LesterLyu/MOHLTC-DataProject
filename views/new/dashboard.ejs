            <hr>

            <h4 class="card-title"><span class="fas fa-user-edit"></span> System Admin</h4>

            <a class="btn btn-outline-success" href="/add-att-cat">Create Attributes/Categories</a>


        </div>
    </div>
    <%- include('../common/messageModal'); -%>

</div>

<%- include('../common/dashboardFooter'); -%>