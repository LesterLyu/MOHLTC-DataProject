<%- include('./common/dashboardHeader', {title: 'Reset Password'}); -%>

<div class="container col-sm-8 col-md-6 col-lg-5 col-xl-4 vertical-gap">
    <div id="alert-error" class="alert alert-danger alert-dismissible hide" role="alert">
        <h5 id="alert-error-text"></h5>
        <button type="button" class="close" aria-label="Close" onclick="hideErrorAlert()">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div id="alert" class="alert alert-success alert-dismissible hide" role="alert">
        <h5 id="alert-text"></h5>
        <button type="button" class="close" aria-label="Close" onclick="hideAlert()">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="loginBox">
        <h1><span class="fa fa-sign-in"></span>Confirm by Email</h1>
    </div>

    <div class="box">
        <form id="resetPasswordForm" action="/api/reset-password" method="post">
            <div class="form-group">
                <br/>
                <label class="signuplabel" for="username">
                    Username:
                </label>
                <input class="form-control singupinput" id="username" name="username" />
                <label class="signuplabel" for="email">Email Address: </label>
                <input id="email" name="email" class="form-control singupinput">
                <br/>
            </div>
            <button type="submit" class="btn btn-primary">Send me an email</button>
            <br/>
            <hr/>
        </form>
    </div>
    <!--Message Modal-->
    <%- include('./common/messageModal'); -%>
</div>
<script
        src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
<script src="/moh.js/ForgetPasswordReset.js"></script>

<%- include('./common/dashboardFooter'); -%>