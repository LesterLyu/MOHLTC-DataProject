<%- include('./common/header', {title: 'Create Attribute/Catrgories'}); -%>

<div class="container col-sm-10 col-md-9 col-lg-8 col-xl-6 vertical-gap">
    <a href="profile" class="btn btn-default"><h4><span class="fa fa-reply"></span> Profile</h4> </a>

    <div class="container" style="margin-top: 0.25%;">
        <h1> Create new Categories/Attributes </h1>
        <br>
        <% if (attriMessage != "") { %>
            <div class="alert alert-danger"><%= attriMessage %></div>
        <% } %>
        <% if (catMessage != "") { %>
            <div class="alert alert-danger"><%= catMessage %></div>
        <% } %>
        <% if (successMessage != "") { %>
            <div class="alert alert-danger"><%= successMessage %></div>
        <% } %>
        <form method="post" action="/submitCategory">
            <label for="newCategory"> New category name: </label>
            <input name="newCategory" type="text">
            <input type="submit" class="btn btn-outline-primary">
        </form>
        <br>
        <form method="post" action="/submitAttribute">
            <label for="newAttribute"> New attribute name: </label>
            <input name="newAttribute" type="text">
            <input type="submit" class="btn btn-outline-primary">
        </form>
    </div>

</div>



<%- include('./common/footer'); -%>

